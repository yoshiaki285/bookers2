<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div id="error_explanation">
        <% if @user.errors.any? %>
          <h3>
            <% if @user.errors.count == 1 %>
              <%= @user.errors.count %>
              error prohibited this obj from being saved:
            <% else %>
              <%= @user.errors.count %>
              errors prohibited this obj from being saved:
            <% end %>
          </h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="user_name">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前" %>
      </div>
      <div class="form-group">
        <label for="user_image">Image</label><br>
        <%= f.file_field :profile_image, id:"user_profile_image", placeholder:"プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label><br>
        <%= f.text_area :introduction, id:"user_introduction", placeholder:"自己紹介文" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
