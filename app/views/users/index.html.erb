  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div id="error_explanation">
      <% if @book.errors.any? %>
        <h3>
          <% if @book.errors.count == 1 %>
            <%= @book.errors.count %>
            error prohibited this obj from being saved:
          <% else %>
            <%= @book.errors.count %>
            errors prohibited this obj from being saved:
          <% end %>
        </h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="row">
      <%= render 'index', book: @book %>
      <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thaed>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thaed>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(80, 80) %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>